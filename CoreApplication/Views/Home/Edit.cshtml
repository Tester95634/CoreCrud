@{
}

<div class="container-fluid">
    <form asp-action="Update" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="mb-3">
            <label for="formFile" class="form-label">Name</label>
            <input class="form-control" type="text" asp-for="Name" value="@Model.Name" id="formFile">
        </div>
        <div class="mb-3">
            <label for="formFileMultiple" class="form-label">Email</label>
            <input class="form-control" type="email" asp-for="Email" value="@Model.Email" id="formFileMultiple" multiple>
        </div>
        <div class="mb-3">
            <label for="formFileDisabled" class="form-label">Password</label>
            <input class="form-control" type="password" asp-for="Password" value="@Model.Password">
        </div>
        <div>
            <img src="~/Uploaded/@Model.Image" style="width:100px;" />
        </div>
        <div class="mb-3">
            <label for="formFileSm" class="form-label">File</label>
            <input class="form-control form-control-sm" name="Image" id="formFileSm" type="file">
        </div>
        <div>
            <label for="formFileLg" class="form-label">Address</label>
            <textarea class="form-control" asp-for="Address" value="@Model.Address" id="formFileLg" type="text"></textarea>
        </div>
        <input type="submit" value="submit" />
    </form>
</div>

